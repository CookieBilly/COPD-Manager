<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/background_color"
    tools:context=".InsideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginBottom="@dimen/normal_margin">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_marginEnd="4dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_menu"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_toEndOf="@id/menu"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/home"
                android:textColor="@color/black"
                android:textSize="@dimen/size_XXL" />

            <ImageView
                android:id="@+id/icon_more"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_more"
                app:tint="@color/black" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:background="@color/dark_gray"
            android:drawableStart="@drawable/icon_exclamation"
            android:drawablePadding="@dimen/normal_margin"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/normal_margin"
            android:text="You have not completed your daily COPD questions! Complete them to keep up to date and help your doctor out!"
            android:textColor="@color/black"
            android:textSize="@dimen/size_M" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/normal_margin"
            android:background="@color/white"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="GRAPH"
                android:textColor="@color/black"
                android:textSize="@dimen/size_M" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/medium_radius"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="3dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/large_margin">

                <View
                    android:layout_width="60dp"
                    android:layout_height="3.5dp"
                    android:background="@drawable/bg_grey_rec"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/contact_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/large_margin"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/bg_yellow"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:focusable="true"
                        android:padding="@dimen/image_button_padding"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_chat_filled"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact your doctor"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_M"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/medium_margin"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/bg_green"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:focusable="true"
                        android:padding="@dimen/image_button_padding"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_icon_history"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Your History"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_M"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/medium_margin"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/image_button_size"
                        android:layout_height="@dimen/image_button_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/bg_pink"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:focusable="true"
                        android:padding="@dimen/image_button_padding"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_document"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get help and information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_M"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/medium_margin"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>